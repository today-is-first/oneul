<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="store.oneul.mvc.user.dao.UserDAO">

    <select id="findByEmail" parameterType="string" resultType="UserDTO">
        SELECT *
        FROM user
        WHERE email = #{email}
    </select>

	<insert id="insertUser" parameterType="UserDTO">
	    INSERT INTO user (
	        username, email, oauth_provider
	    )
	    VALUES (
	        #{username}, #{email}, #{oauthProvider}
	    )
	</insert>


    
   <select id="findById" resultType="UserDTO">
        SELECT *
        FROM user
        WHERE user_id = #{userId}
    </select>

    <update id="updateUserInfo" parameterType="UserDTO">
        UPDATE user
        SET username = #{username},
            nickname = #{nickname},
            user_tel = #{userTel},
            signup_completed = true
        WHERE user_id = #{userId}
    </update>

</mapper>
